    "next-sanity": "^4.1.6",
    "next-sitemap": "^4.0.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sanity": "^3.14.1",
    "sanity-plugin-asset-source-unsplash": "^1.0.6",
